<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/gray1"
    tools:context=".AddToMenu">
    <include
        layout="@layout/action_par"/>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/manage_menu"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="@color/yellow"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:inputType="text"
        android:textSize="30sp"
        android:layout_marginHorizontal="20dp"
        android:textColor="#ffffff"
        android:hint="@string/add_meal_or_drink"
        tools:ignore="Autofill" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        android:gravity="center"
        android:inputType="text"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:hint="@string/add_price"
        tools:ignore="Autofill" />

    <Button
        android:padding="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/take_away_background_par_man"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="@string/add"
        android:layout_gravity="center"
        android:textColor="@color/gray2"/>
    </LinearLayout>
</LinearLayout>